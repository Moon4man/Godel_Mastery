@model BookDTO

@{
    ViewBag.Title = "More info..";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Model.ImageLink" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h2 class="card-title">@Model.Name</h2>
                    <h5 class="card-subtitle lead">@Model.Author</h5>
                    <h2 class="mt-5">
                        @Model.Price.ToString("c")
                    </h2>
                    <a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">
                        <i class="fa fa-shopping-cart"><span style="margin-left: 15px"><strong>Add basket</strong></span></i>
                    </a> 
                    <h4 class="box-title mt-5">Description</h4>
                    <p>@Model.Description</p>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-borderless table-product">
                            <tbody>
                                <tr>
                                    <td>Name</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td>Author</td>
                                    <td>@Model.Author</td>
                                </tr>
                                <tr>
                                    <td>Publishing house</td>
                                    <td>@Model.PublishingHouse</td>
                                </tr>
                                <tr>
                                    <td>Year of publication</td>
                                    <td>@Model.YearOfPublication</td>
                                </tr>
                                <tr>
                                    <td>Number of page</td>
                                    <td>@Model.NumberOfPage</td>
                                </tr>
                                <tr>
                                    <td>Category</td>
                                    <td>@Model.Category.Name</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>