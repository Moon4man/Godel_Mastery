@model IEnumerable<OrdersViewDTO>

<h2>My Orders</h2>

@if (Model?.Count() <= 0)
{
    <div>
        <p>No Order so far!</p>
    </div>
    return;
}

<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>Clietn Info</th>
            <th>Order Summary</th>
            <th>Total Ammount</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var order in Model)
        {
            <tr>

                <td class="text-justify">
                    <div>
                        @order.OrderDetails.FirstName @order.OrderDetails.LastName
                        <div>
                            @order.OrderDetails.Address
                        </div>
                    </div>
                    <div>@order.OrderDetails.PhoneNumber</div>
                    <br />
                    <div>
                        @order.OrderTime
                    </div>

                </td>


                <td>
                    <table class="table">
                        <tbody>
                            @foreach (var item in order.BookOrderInfo)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Price.ToString("c") * @item.Quantity

                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>
                </td>
                <td>
                    @order.OrderTotal?.ToString("c")
                </td>
            </tr>

        }

    </tbody>
</table>
