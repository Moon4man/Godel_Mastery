@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<head>
    <link href="signin.css" rel="stylesheet">
</head>
<body>
 <main form method="post" asp-controller="Account" asp-action="Login">
      <div class="text-center">
           <img class="mb-4" src="/img/Emblem.jpg" alt="" width="72" height="72">
           <h1 class="h3 mb-3 fw-normal">Please, login</h1>
      </div>
      <p>
           <a href="/Account/Register" class="nav-link px-2 text-center">Register</a>
      </p>
   <form asp-action="Login">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group text-center">
        <label asp-for="UserName" class="control-label"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="Password" class="control-label"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group text-center">
         <p class="text-white">Hi All!</p>
        <input type="submit"  class="btn btn-primary" value="Login" />
    </div>
   </form>
   <p class="mt-2 mb-2 text-center">© 2022</p>
 </main>
</body>