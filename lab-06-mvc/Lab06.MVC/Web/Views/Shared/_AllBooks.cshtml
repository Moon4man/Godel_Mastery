@model BookDTO
 
<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.ImageLink" alt="@Model.Name" width="275" height="175"/>
    <a class="nav-link text-black" asp-action="GetBookInfo" asp-controller="Home" asp-route-id="@Model.Id"><h3 style="margin-left: -16px">@Model.Name</h3></a>
    <p class="lead" style="margin-top: -13px">@Model.Author</p>
    <p style="margin-top: -13px">Price: @Model.Price.ToString("c")</p>
    <p>
        <a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">
            <i class="fa fa-shopping-cart"><span style="margin-left: 15px"><strong>Add basket</strong></span></i>
        </a> 
    </p>
</div>